{# Example Twig template #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title|default('Setka CMS') }}</title>
    <style>
        body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; padding: 2rem; }
        .muted { color: #666; }
    </style>
    </head>
<body>
    <h1>{{ heading|default('It works!') }}</h1>
    <p class="muted">Rendered via Twig. Time: {{ "now"|date("Y-m-d H:i:s") }}</p>
    <p>App ID: {{ app.id }}</p>
</body>
</html>

